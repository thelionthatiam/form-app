{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target":"es6",
    "allowJs": true,
    "outDir": "build",
    "sourceMap":true,
    "noImplicitAny":true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules",
    "tsDist",
    "dist",
    "webpack.config.js",
    "test",
    "coverage"
  ],
  "include": [
    "src/**/*",
    "src/config/*",
    "views",
    "public",
    "typings/*"
  ],
  "files": [
    "typings/*"
  ]
}
